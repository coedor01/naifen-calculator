generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Report {
  id         Int     @id @default(autoincrement())
  standard   String
  element    String
  content    Int
  minContent Int
  maxContent Int
  cmp        Int
  product    Product @relation(fields: [productId], references: [id])
  productId  Int
}

model Product {
  id      Int      @id @default(autoincrement())
  brand   Brand    @relation(fields: [brandId], references: [id])
  name    String
  level   Int
  brandId Int
  energy  Float
  weight  Float
  price   Float
  Report  Report[]
}

model Brand {
  id      Int       @id @default(autoincrement())
  name    String
  Product Product[]
}
