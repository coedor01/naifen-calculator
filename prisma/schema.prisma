generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Report {
  id         Int      @id @default(autoincrement())
  element    String
  content    Int
  minContent Int
  maxContent Int
  cmp        Int
  product    Product  @relation(fields: [productId], references: [id])
  standard   Standard @relation(fields: [standardId], references: [id])
  productId  Int
  standardId Int
}

model Product {
  id         Int      @id @default(autoincrement())
  brand      Brand    @relation(fields: [brandId], references: [id])
  standard   Standard @relation(fields: [standardId], references: [id])
  name       String
  level      Int
  brandId    Int
  weight     Float
  price      Float
  Report     Report[]
  standardId Int
}

model Brand {
  id        Int       @id @default(autoincrement())
  name      String
  isForeign Boolean
  Product   Product[]
}

model StandardElement {
  id      Int    @id @default(autoincrement())
  element String
  content Int
  min     Float
  max     Float
}

model Standard {
  id      Int       @id @default(autoincrement())
  name    String
  Product Product[]
  Report  Report[]
}
